.card.mb-3
  .card-header
    %b Information
  .card-body
    = bootstrap_form_for @game, url: meta_game_path(@game) do |f|
      = render('game_form', f:)

      .d-flex.justify-content-end
        = link_to 'Cancel', meta_game_path(@game), class: 'btn btn-link mr-2'
        = f.primary 'Update'

.alert.alert-danger.mb-3
  %label.font-weight-bold.alert-heading Danger Zone!
  .btn-toolbar.guttered
    = button_to meta_game_path(@game), method: :delete, class: 'btn btn-danger',
                data: { confirm: 'Are you sure you want to delete this Game?' } do
      = inline_svg_tag 'open_iconic/trash.svg', class: 'icon mr-2'
      Delete
